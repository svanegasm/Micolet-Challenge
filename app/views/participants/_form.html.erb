<%= form_with(model: @participant, method: :post, html: { class: "space-y-6"}, local: true) do |form| %>
    <div class="font-bold text-center text-gray-600">
        <p><%= t(".welcome") %></p>
        <p class="mt-3"><%= t(".subscribe_newsletter") %></p>
    </div>

    <% if @participant.errors.any? %>
        <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded block">
            <p class="font-bold"><%= t("errors", count: @participant.errors.count) %></p>
            <ul>
                <% @participant.errors.full_messages.each do |message| %>
                    <li  class="block sm:inline"><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <label class="block text-gray-700 font-bold"> <%= form.label :email, t('.email') %> </label>
        <p id="errorMsg" class="hidden text-red-700">- Invalid email format</p>
        <div class="mt-2 rounded">
            <%= form.text_field :email, class: "block bg-white-100 w-full rounded border py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-500 sm:text-sm sm:leading-6"  %>
        </div>
    </div>

    <div>
        <label class= "block font-bold text-gray-700"> <%= t(".preferences")%> </label>
        <label class="ml-2 block">
            <%= form.check_box :women_fashion_preference, class: "w-4 h-4 text-green-600 bg-gray-200 border-gray-300 rounded focus:ring-green-500 focus:ring-2" %>
            <span class="text-gray-600 ml-2"><%= t(".women_fashion") %></span>
        </label>
        <label class="mt-1 ml-2 block">
            <%= form.check_box :men_fashion_preference, class: "w-4 h-4 text-green-600 bg-gray-200 border-gray-300 rounded focus:ring-green-500 focus:ring-2" %>
            <span class="text-gray-600 ml-2"><%= t(".men_fashion") %></span>
        </label>
        <label class="mt-1 ml-2">
            <%= form.check_box :children_fashion_preference, class: "w-4 h-4 text-green-600 bg-gray-200 border-gray-300 rounded focus:ring-green-500 focus:ring-2" %>
            <span class="text-gray-600 ml-2"><%= t(".children_fashion") %></span>
        </label>
    </div>

    <div class="text-center">
        <%= form.submit t(".subscribe_me"), disable_with: 'Submiting...', class: "enabled:active:scale-[.98] enabled:active:duration-75 enabled:hover:scale-[1.01] ease-in-out transition-all py-3 px-4 rounded enabled:bg-green-400 text-white text-lg font-bold disabled:bg-gray-400" %>
    </div>
<% end %>